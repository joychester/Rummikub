        :javascript
            function loadSVG() {
              if("performance" in window && performance.mark){
                 performance.mark("Highcharts SVG loaded");
              }
              //adding Boomerang variables before page_ready event triggered
              BOOMR.addVar("user_timing",window.performance.now().toFixed(1));
              //Add custom metrics Var if Resource timing API supported
              if(performance.getEntriesByName && performance.now){
                BOOMR.addVar("t_css", window.performance.getEntriesByName("homeCSS done blocking")[0].startTime.toFixed(1));
                BOOMR.addVar("t_js", window.performance.getEntriesByName("homeJS done blocking")[0].startTime.toFixed(1));
                BOOMR.addVar("t_svg", window.performance.getEntriesByName("Highcharts SVG loaded")[0].startTime.toFixed(1));
              }
              //Trigger Page_ready event to send beacon
              BOOMR.page_ready();
            }
        %script{:src => "/resources/content_static/js/trend.js", :type => "text/javascript", :onload => "loadSVG()"}
